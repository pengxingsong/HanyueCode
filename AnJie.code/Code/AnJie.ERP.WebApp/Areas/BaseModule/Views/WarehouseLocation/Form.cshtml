            <td class='formValue'>
                <input id="Weight" maxlength=9 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>拣货顺序：</th>
            <td class='formValue'>
                <input id="PickingSEQ" maxlength=64 type="text" class="txt" />
            </td>
  
