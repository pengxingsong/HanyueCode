                <input id="LocationClass" maxlength=32 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>库位类型：</th>
            <td class='formValue'>
                <input id="LocationType" maxlength=10 type="text" class="txt" />
            </td>
    
