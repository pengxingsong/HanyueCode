                <td>
                    <input id="ReceivePhone" type="text" class="txt" datacol="yes" style="width: 95%" />
                </td>
                <th>邮编：</th>
                <td>
                    <input id="ReceiveZip" type="text" class="txt" datacol="yes" style="width: 95%" />
                </td>
            </tr>
            <tr>
                <th>所在省：</th>
